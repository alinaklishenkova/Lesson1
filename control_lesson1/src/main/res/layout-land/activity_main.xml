<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="329dp"
        android:layout_height="86dp"
        android:layout_marginStart="201dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="201dp"
        android:src="@drawable/_388dc2487cb62bb47607cf1809b29ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Login"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/email_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="256dp"
        android:layout_height="49dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/ubuntu_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/icon_email"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/icon_password"
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="18dp"
        android:minHeight="48dp"
        android:paddingVertical="12dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_email" />

    <EditText
        android:id="@+id/password_ed"
        android:layout_width="256dp"
        android:layout_height="51dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/ubuntu_light"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/icon_password"
        app:layout_constraintTop_toBottomOf="@+id/email_et" />

    <Button
        android:id="@+id/button2"
        android:layout_width="323dp"
        android:layout_height="49dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/blue"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_ed" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="270dp"
        android:layout_marginTop="18dp"
        android:text="New to here?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/go_to_register_activity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Sign up"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
</androidx.constraintlayout.widget.ConstraintLayout>